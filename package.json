{
  "name": "pogonka",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "watch:tailwind": "postcss public/css/tailwind.css -o public/css/style.css --watch",
    "watch:ts": "tsc --watch",
    "watch:server": "nodemon --watch dist --watch views --ext js,hbs dist/index.js",
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:tailwind\" \"npm run watch:server\""
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.10",
    "@tailwindcss/postcss": "^4.1.10",
    "autoprefixer": "^10.4.21",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-handlebars": "^6.0.0",
    "@types/node": "^24.0.3",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3",
    "typescript": "^5.5.3"
  },
  "private": true
}
