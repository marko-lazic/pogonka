{
  "name": "pogonka",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run build:assets && npm run build:css",
    "build:assets": "rspack",
    "build:css": "postcss public/css/app.css -o public/css/output.css",
    "start": "node dist/index.js",
    "watch:tailwind": "postcss public/css/app.css -o public/css/output.css --watch",
    "watch:ts": "tsc --watch",
    "watch:server": "nodemon --watch dist --watch views --ext js,hbs dist/index.js",
    "watch:js": "rspack --watch",
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:tailwind\" \"npm run watch:js\" \"npm run watch:server\""
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.10",
    "@tailwindcss/postcss": "^4.1.10",
    "autoprefixer": "^10.4.21",
    "cookie-parser": "^1.4.6",
    "eventsource": "^2.0.2",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "express-session": "^1.17.3",
    "htmx-ext-sse": "^2.2.3",
    "htmx.org": "^2.0.5",
    "i18n": "^0.15.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.10",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@rspack/cli": "^1.3.15",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/express-handlebars": "^6.0.0",
    "@types/express-session": "^1.17.10",
    "@types/i18n": "^0.13.12",
    "@types/node": "^24.0.3",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "daisyui": "^5.0.43",
    "nodemon": "^3.0.3",
    "typescript": "^5.5.3"
  },
  "private": true
}
