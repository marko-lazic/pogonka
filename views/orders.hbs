<div class="flex flex-col gap-6">
    <h1 class="text-3xl font-bold mb-2">Orders</h1>
    <p class="text-base-content opacity-70 mb-4">Manage your orders in <span class="font-semibold">Pogonka</span>!</p>

    <!-- Keyboard shortcut script -->
    <script>
        document.addEventListener('keydown', function(e) {
            // Check for Cmd+K on Mac or Ctrl+K on Windows/Linux
            if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
                e.preventDefault(); // Prevent default browser behavior
                document.getElementById('order-search').focus();
            }
        });
    </script>

    <!-- Search and Create New Order Button -->
    <div class="flex justify-between items-center">
        <div class="relative w-1/3">
            <label class="input flex items-center">
                <input 
                    type="search" 
                    id="order-search"
                    name="q" 
                    placeholder="Search orders..."
                    value="{{searchQuery}}"
                    class="grow" 
                    hx-get="/orders" 
                    hx-trigger="input changed delay:300ms, search, keyup[key=='Enter']"
                    hx-target="#order-table-container" 
                    hx-swap="outerHTML"
                    hx-push-url="true"
                    hx-include="[name='page'], [name='size']"
                    hx-indicator="#search-spinner"
                    autocomplete="off"
                >
                <kbd class="kbd kbd-sm">âŒ˜</kbd>
                <kbd class="kbd kbd-sm">K</kbd>
                <div id="search-spinner" class="htmx-indicator absolute right-3 top-1/2 transform -translate-y-1/2">
                    <span class="loading loading-spinner loading-sm"></span>
                </div>
            </label>
        </div>
        <a href="/orders/create" class="btn btn-primary">
            Create New Order
        </a>
    </div>

    <!-- Order List -->
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <h2 class="card-title">Order List</h2>

            {{> order-table-container}}
        </div>
    </div>
</div>
